<h1>Edita tu perfil</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@user) do |f| %>
     <%= render 'shared/error_messages' %>
      <h3>Introduce tu nombre nuevo</h3>
      <%= f.text_field :nombre %>
      <h3>Introduce tu email nuevo</h3>
     <%= f.text_field :email %>
     <h3>Introduce tu nueva contraseña</h3>
      <%= f.text_field :pass %>
       <h3>Introduce tu contraseña de nuevo</h3>
      <%= f.text_field :password_digest %>
   
      
   
<div class="actions" >
      <%= f.submit 'Guardar Cambios' %>
    </div>
    <% end %>

   
  </div>
</div>